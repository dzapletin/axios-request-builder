{
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "moduleResolution": "node",
    "baseUrl": ".",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
